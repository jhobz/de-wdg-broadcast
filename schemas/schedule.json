{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Schedule",
    "description": "A representation of some or all of the games to be played in a season's schedule",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "opponent": {
                "type": "string"
            },
            "date": {
                "type": "string",
                "format": "date-time"
            }
        },
        "additionalProperties": false,
        "required": ["opponent", "date"]
    },
    "uniqueItems": true,
    "default": []
}
